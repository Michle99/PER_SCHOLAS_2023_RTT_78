html
    head
        title Delete User
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    body
        .container.mt-5
            h1 Delete User
            p Are you sure you want to delete this user?
            p
                strong Name:
                | #{user.name}
            p
                strong Email:
                | #{user.email}
            form(id='deleteForm', method='post', action=`/users/delete/${user.id}`)
                button.btn.btn-danger(type='button', data-toggle='modal', data-target='#confirmationModal') Confirm Delete
            a.btn.btn-secondary(href='/users') Cancel

        // Confirmation Modal
        .modal#confirmationModal(tabindex='-1', role='dialog')
            .modal-dialog
                .modal-content
                    .modal-header
                        h5.modal-title Confirmation
                        button.close(type='button', data-dismiss='modal', aria-label='Close')
                            span(aria-hidden='true') &times;
                    .modal-body
                        p Are you sure you want to delete this user?
                        p
                            strong Name:
                            | #{user.name}
                        p
                            strong Email:
                            | #{user.email}
                    .modal-footer
                        button.btn.btn-secondary(type='button', data-dismiss='modal') Cancel
                        button.btn.btn-danger(type='submit') Confirm Delete
