html
    head
        title User Management
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
        style.
            body {
                background-color: #333;
                color: #fff;
            }
    body
        .container.mt-5
            h1 All Users
            table.table.table-bordered.table-striped
                thead
                    tr
                        th Name
                        th Email
                        th Actions
                tbody
                    each user in users
                        tr
                            td #{user.name}
                            td #{user.email}
                            td
                                a.btn.btn-primary.btn-sm(href=`/users/edit/${user.id}`) Edit
                                a.btn.btn-danger.btn-sm(href=`/users/delete/${user.id}`) Delete
            a.btn.btn-success.mt-3(href='/users/add') Add User
