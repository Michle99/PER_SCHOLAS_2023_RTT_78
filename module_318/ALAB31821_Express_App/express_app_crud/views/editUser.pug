html
    head
        title Edit User
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
        style.
            body {
                background-color: #333;
                color: #fff;
            }
    body
        .container.mt-5
            h1 Edit User
            form(method='post', action=`/users/edit/${user.id}`)
                .form-group
                    label(for='name') Name:
                    input.form-control(type='text', id='name', name='name', value=user.name, required)
                .form-group
                    label(for='email') Email:
                    input.form-control(type='email', id='email', name='email', value=user.email, required)
                input(type='hidden', name='id', value=user.id)
                button.btn.btn-primary(type='submit') Save
            a.btn.btn-secondary(href='/users') Cancel